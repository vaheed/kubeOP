ARG GO_VERSION=1.24
FROM golang:${GO_VERSION}-alpine3.20 AS build
WORKDIR /src
RUN apk add --no-cache ca-certificates git build-base
COPY go.mod go.sum* ./
RUN go mod download || true
COPY . .
RUN CGO_ENABLED=0 GOOS=linux GOARCH=amd64 go build -ldflags "-s -w" -o /out/dnsmock ./cmd/dnsmock

FROM gcr.io/distroless/static:nonroot
COPY --from=build /out/dnsmock /dnsmock
USER 65532:65532
EXPOSE 8080
ENTRYPOINT ["/dnsmock"]

